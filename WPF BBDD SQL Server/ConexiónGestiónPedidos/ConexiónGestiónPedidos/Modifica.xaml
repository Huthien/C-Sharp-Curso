<Window x:Class="ConexiónGestiónPedidos.Modifica"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConexiónGestiónPedidos"
        mc:Ignorable="d"
        Title="Modificar Cliente" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Nombre: "></Label>
            <TextBox Width="200" Height="30" Name="modificaNombre"></TextBox>
            <Button Content="Actualizar" Margin="0,5,0,0" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
